<div class="friendsHeader">
  <h1 class="left-title">Friends</h1> 

  <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#addFriendModal" id="addFriendButton">
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></i>
  </button>
</div>
<div id="friendsScroll">
  <div class="scroll">  
    <ul class ="listOfFriends">   
    </ul>
  </div>
</div>
<!-- Start of friend detail modal -->
<div class="modal fade" id="showFriendModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

       <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"><span id="friend-details"></span>'s Starchart</h4>
      </div>

      <div class="modal-body">
        <div id="friendstars"></div>
      </div>


      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-xs" id="deleteFriendshipButton">
          Remove Friend
        </button>
        <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">
          Close
        </button>
      </div>
      
    </div>
  </div>
</div>
<!-- End of modal -->

<!-- Start of add friend modal -->
<div class="modal fade" id="addFriendModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add Friend</h4>
      </div>

      <div class="modal-body">

        <form id="findFriendForm" action="" method="get">
        
          <fieldset class="form-group">
            <label for="findByEmail">Find friend by email address:</label>
            <input type="text" class="form-control" id="findByEmail" name="findByEmail" />
            <br>
          </fieldset>   

          
          <input type="submit" class="btn btn-primary" id="findFriendButton" value ="Search" />
        </form>


        
        <div id="show-results">
        </div>

        <form id="actualAddFriendForm" action="" method="post">
        <input type="submit" class="btn btn-primary" id="addFriendshipButton" value ="Add" />
        </form>
        <!-- <form id="inviteByEmailForm" method="link"> -->
        <button class="btn btn-primary" id="inviteFriendButton">Invite</button>
        <!-- </form> -->
      </div>

