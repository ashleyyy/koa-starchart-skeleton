<% include partials/__navbar %>
<div id="userId" data-id="<%= id %>"></div>
<h1 class="greeting">Hello, <%= username %>! <span id='header-task' data-header-task-id='header_task'>Today's a good day to walk the dog!</span></h1>
<div class="skyContainer skyImg" id="basebox">
