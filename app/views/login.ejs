<h1 class="text-center" id="signin-title">Sign In</h1>

<form id="login-form" class="text-center" action="/login" method="post">
  <div class="input-in-form">
    <span>
      <input type="text" placeholder="Username" name="username" required/>
      <i class="fa fa-user"></i>
    </span>
  </div>
  <div class="input-in-form">
    <span>
      <input type="password" placeholder="Password" name="password" required/>
      <i class="fa fa-key"></i>
    </span>
  </div>
  <button class="btn btn-primary btn-sm" type="submit">
    <i class="fa fa-arrow-circle-o-right fa-lg"> Sign In </i>
  </button>
</form>

<div class="text-center">
  <a href="/auth/github" class="btn social-button">
    <i class="fa fa-github fa-lg"></i> 
    <span>Sign in with GitHub</span> 
  </a>
</div>

<h1 class="text-center" id="signup-title"> Sign Up </h1>

<form id="signup-form" class="text-center" action="/signup" method="post">
  <div class="input-in-form">
    <span>
      <input type="text" placeholder="Username" name="username" required/>
      <i class="fa fa-user"></i>
    </span>
  </div>
  <div class="input-in-form">
    <span>
      <input type="email" placeholder="Email" name="email" required/>
      <i class="fa fa-envelope-o"></i>
    </span>
  </div>
  <div class="input-in-form">
    <span>
      <input type="password" placeholder="Password" name="password" required/>
      <i class="fa fa-key"></i>
    </span>
  </div>
  <p>Tip: Your password must be between 8 and 20 characters in length</p>
  <button class="btn btn-primary btn-sm" type="submit">
    <i class="fa fa-arrow-circle-o-right fa-lg"> Sign Up </i>
  </button>
</form>