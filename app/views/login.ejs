  <div class="social-login-container">
    <!-- <h4>Sign in with</h4> -->

    <div class="social-login-buttons github-login">
      <div class="text-center">
        <a href ="/auth/github" class="btn social-button">
          <span class="fa fa-github fa-lg"></span> GitHub
        </a>
      </div>  
    </div> 

    <div class="social-login-buttons twitter-login">
      <div class="text-center">
        <a href ="#" class="btn social-button">
